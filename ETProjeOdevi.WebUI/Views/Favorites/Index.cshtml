 @model List<Product>
@{

	ViewData["Title"] = "Favorilerim";
}


<section class="container my-5">

	<div class="text-center">
		<h1 class="display-4">Favorilerim</h1>
	</div>
	<div class="row">
		<div class="col-md-11">
			<div class="table table-responsive">
				@if (Model.Any())
				{
					<table class="table table-striped table-hover">
						<tr>
							<th></th>
							<th>Ürün</th>
							<th>Fiyat</th>
							<th></th>
						</tr>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="/Img/Products/@item.Image" alt="" height="37" />
									</td>
									<td>
										<a class="nav-link text-dark" href="/Products/Details/@item.Id">
											@item.Name
										</a>
									</td>
									<td>
										@item.Price.ToString("c")
									</td>
									<td>
										<form action="/" method="post">
											<input type="hidden" name="ProductId" value="@item.Id" />
											<button class="btn btn-sm btn-danger" type="submit">
												<i class="bi bi-x-lg"></i>
											</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
				}
				else
				{
					<div class="container">
						<div class="alert alert-warning my-5">
							<h3> Favorilerinizde Ürün bulunmamaktadır!</h3>
						</div>

					</div>
				}
			</div>
		</div>
	</div>
</section>


